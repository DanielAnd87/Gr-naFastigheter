@page "/login"

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<div class="container card card-body my-5" style="background-color: #fff;">
    <EditForm Model="_userForAuthentication" OnValidSubmit="ExecuteLogin">
        <DataAnnotationsValidator />
        <h3 class="h3 text-center my-2">Logga in</h3>

        <div class="form-group">
            <label for="username">Användarnamn</label>
            <InputText id="username" class="form-control border border-success" placeholder="Användarnamn" @bind-Value="_userForAuthentication.Username" />
            <ValidationMessage For="@(() => _userForAuthentication.Username)" />
        </div>

        <div class="form-group">
            <label for="password">Lösenord</label>
            <InputText type="password" id="password" class="form-control border border-success" placeholder="Lösenord" @bind-Value="_userForAuthentication.Password" />
            <ValidationMessage For="@(() => _userForAuthentication.Password)" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Logga in</button>
        </div>
    </EditForm>

    <div class="text-center">
        <p class="mt-2 mb-0">Har du inget konto?</p>
        <NavLink class="nav-link" href="/registration">
            <span aria-hidden="true">Skapa nytt konto</span>
        </NavLink>
    </div>
</div>

