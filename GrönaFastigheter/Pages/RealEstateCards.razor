@using System.Net.Http.Json;
@using Entities.Models
@inject IRealEstateHttpsRepository context
@inject NavigationManager NavManager


@if (realEstates == null)
{
    <p>Loading.....</p>
}
else
{
    foreach (var estate in CurrentRealEstateList)
    {

        string typeOfSale = "";
        @if (estate.CanBeSold)
        {
            typeOfSale = "Säljes";
        }
        if (estate.CanBeRented)
        {
            typeOfSale = "Uthyres";
        }
        @if (estate.CanBeSold && estate.CanBeRented)
        {
            typeOfSale = "Säljes/Uthyres";
        }

        <a href="/realestate/@estate.Id" class="text-dark text-decoration-none">
            <div class="px-5 mb-5">
                <div class="card mb-3 shadow">
                    <img class="card-img card-img-top" src="@estate.ImageUrl" alt="Bilden kunde inte visas">
                    <div class="card-body row">
                        <div class="col">
                            <h3 class="card-title">@estate.Title</h3>
                            @if (estate.SellingPrice > 0)
                            {
                                <h5>Säjpris: @(estate.SellingPrice)kr</h5>
                            }
                            @if (estate.RentingPrice > 0)
                            {
                                <h5>Hyra: @(estate.RentingPrice)kr / månad</h5>
                            }
                        </div>
                        <div class="col text-right">
                            <h4>@typeOfSale</h4>
                        </div>
                        <div class="card-data-row">
                            <div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>

        if (false)
        {
        <div class="card-container">
            <div class="estate-card" @onclick="@(e => RedirectToEstate(estate.Id))">
                <div class="card-img">
                    <img src="@estate.ImageUrl" alt="Bilden kunde inte visas" />
                </div>
                <div class="card-data">
                    <div>
                        <h4>@estate.Title</h4>
                        <p>@typeOfSale</p>
                    </div>
                    <div class="card-data-row">
                        <div class="card-data-row-item">
                            @if (estate.SellingPrice > 0)
                            {
                                <p>Säjpris: @(estate.SellingPrice)kr</p>
                            }
                            @if (estate.RentingPrice > 0)
                            {
                                <p>Hyra: @(estate.RentingPrice)kr / månad</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }
    <div>
        <p>Sida: @(searchData.CurrentPage+1) av @GetAmountOfPages() (@FilteredEstates.Count annonser).</p>
        <input type="button" value="Föregående Sida" @onclick="(e=>ChangePage(false))" />
        <input type="button" value="Nästa Sida" @onclick="(e=>ChangePage(true))" />
        <input type="button" value="Första Sidan" @onclick="(e=>ChangePage(0))" />
    </div>
}

@code {
    public List<RealEstate> CurrentRealEstateList => GetPageOfEstates(FilteredEstates, searchData.CurrentPage);
    public int ListPage = 0;
