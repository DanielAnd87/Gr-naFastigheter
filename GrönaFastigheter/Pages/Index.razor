@page "/"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
<div class="page-container">
    <div class="hero-img">
        <div class="search-container">
            <div>
                <h2>Sök bostäder</h2>
            </div>
            <div>
                <input class="form-control form-control-lg" type="search" name="name" placeholder="Adress, Bostadstyp, Säljes/Uthyres" @bind-value="searchTerms.Searchterm" @bind-value:event="oninput" />
            </div>
        </div>
    </div>
    <div class="inner-container">
        <h3>Bostäder till salu</h3>
        <div class="estates-listing">
            <CascadingValue Value="@searchTerms">
                <RealEstateCards />
            </CascadingValue>
        </div>
    </div>
</div>

@code {
    public SearchTerms searchTerms { get; set; } = new SearchTerms();
    public List<string> OrderAlternatives { get; set; } = new List<string> {
        "Hyra",
        "Säljpris",
        "Titel",
        "Adress"
       };


    private void OnPickedOrder(ChangeEventArgs args)
    {
        searchTerms.OrderBy = args.Value.ToString();
    }
}