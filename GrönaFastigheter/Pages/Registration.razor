@page "/registration"

@if (ShowRegistrationErros)
{
<div class="alert alert-danger" role="alert">
        <p class="alert-danger">@ErrorMessage</p>
    
</div>
}

<div class="container card card-body my-5" style="background-color: #fff;">
    <EditForm Model="_userForRegistration" OnValidSubmit="Register">
        <DataAnnotationsValidator />
        <h3 class="h3 text-center my-2">Skapa konto</h3>

        <div class="form-group">
            <label for="email">Användarnamn</label>
            <InputText id="username" class="form-control border border-success" placeholder="Användarnamn" @bind-Value="_userForRegistration.Username" />
            <ValidationMessage For="@(() => _userForRegistration.Username)" />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <InputText id="email" class="form-control border border-success" placeholder="Email" @bind-Value="_userForRegistration.Email" />
            <ValidationMessage For="@(() => _userForRegistration.Email)" />
        </div>

        <div class="form-group">
            <label for="password">Lösenord</label>
            <InputText type="password" id="password" class="form-control border border-success" placeholder="Lösenord" @bind-Value="_userForRegistration.Password" />
            <ValidationMessage For="@(() => _userForRegistration.Password)" />
        </div>

        <div class="form-group">
            <label for="confirm">Bekräfta lösenord</label>
            <InputText type="password" id="confirm" class="form-control border border-success" placeholder="Bekräfta lösenord" @bind-Value="_userForRegistration.ConfirmPassword" />
            <ValidationMessage For="@(() => _userForRegistration.ConfirmPassword)" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Skapa konto</button>
        </div>
    </EditForm>

    <div class="text-center p-3 mx-auto">
        <p class="mb-1">Har du redan ett konto?</p>
        <NavLink class="text-dark" href="/login">Logga in</NavLink>
    </div>
</div>